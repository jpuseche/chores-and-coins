<div class="flex flex-col bg-gray-500 w-full mx-">
  <h1 class="text-3xl font-bold my-5 text-center">New Activity</h1>
  <div class="flex justify-center w-1/3 mx-auto">
    <%= form_with model: @son do |form| %>
      <div class="mb-5">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "w-full rounded" %>
      </div>

      <div class="mb-5">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "w-full rounded" %>
      </div>

      <div class="mb-5">
        <%= form.label :email %>
        <%= form.email_field :level, class: "w-full rounded" %>
      </div>

      <div class="mb-5">
        <%= form.label :gender %>
        <%= form.email_field :gender, class: "w-full rounded" %>
      </div>

      <div class="mb-5">
        <%= form.label :age %>
        <%= form.email_field :age, class: "w-full rounded" %>
      </div>

      <div class="mb-5">
        <%= form.label :phone %>
        <%= form.email_field :phone, class: "w-full rounded" %>
      </div>

      <div class="bg-[#4237CA] hover:bg-[#4237CA] cursor-pointer text-white font-bold py-2 w-40 text-center mx-auto px-4 mt-10 rounded">
        <%= form.submit "Save Son" %>
      </div>
    <% end %>
  </div>
</div>