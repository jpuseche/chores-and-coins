<div class="flex">
  <div class="lg:w-1/2 w-full h-screen bg-[#131226]">
  </div>
  <div class="lg:w-1/2 w-full h-screen flex items-center justify-center">
    <div class="w-full max-w-sm">
      <h2 class="text-2xl font-bold mb-3 text-center">Welcome back!</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-full flex flex-col items-center") do |f| %>
        <% if notice || alert %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4 text-xs" role="alert">
            <strong class="font-bold">Error! </strong>
            <span class="block sm:inline"><%= alert %></span>
          </div>
        <% end %>

        <div class="mb-4">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 rounded" %>
        </div>

        <div class="mb-4">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 rounded" %>
        </div>

        <div class="mb-4 flex justify-end">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "cursor-pointer text-sm mb-4" %>
          <% end %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-1">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="flex flex-col gap-3">
          <%= f.submit "Log in", class: "bg-[#131226] hover:bg-purple-700 text-white font-bold py-2 px-4 rounded w-full mt-3 cursor-pointer" %>

          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <p class="text-sm text-center">Don't you have an account yet?<br> <%= link_to "Request your account", new_registration_path(resource_name), class: "font-bold text-[#131226]" %></p>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

