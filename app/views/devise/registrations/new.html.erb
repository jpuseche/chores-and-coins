<div class="flex">
  <div class="lg:w-1/2 w-full h-screen bg-[#131226]">
  </div>
  <div class="lg:w-1/2 w-full h-screen flex items-center justify-center">
    <div class="w-full max-w-sm">
      <h2 class="text-2xl font-bold mb-3 text-center">Welcome back!</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "w-full flex flex-col items-center") do |f| %>
        <div class="mb-4">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 rounded" %>
        </div>


        <div class="mb-4">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-4 rounded" %>
        </div>

        <div class="mb-4">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-4 rounded" %>
        </div>

        <div class="mb-4 flex justify-end">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "cursor-pointer text-sm mb-4" %>
          <% end %>
        </div>

        <div class="flex flex-col gap-3">
          <%= f.submit "Sign up", class: "bg-[#131226] hover:bg-purple-700 text-white font-bold py-2 px-4 rounded w-full mt-3 cursor-pointer" %>

          <%- if controller_name != 'sessions' %>
            <%= link_to "Log in", new_session_path(resource_name), class: "text-center bg-[#131226] hover:bg-purple-700 w-full text-white font-bold py-2 px-4 rounded cursor-pointer" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


