<%= form_for([@son], url: admin_create_child_path) do |form| %>
  <div class="grid grid-cols-2 gap-10">
    <div class="col-span-1">
      <div class="mb-5">
        <%= form.label :first_name %><br>
        <%= form.text_field :first_name, class: "w-full rounded " %>
        <% if error_classes(@son.errors.full_messages_for("name")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("name")[0] %></span>
          </div>
        <% end %>
      </div>

      <div class="mb-5">
        <%= form.label :last_name %><br>
        <%= form.text_field :last_name, class: "w-full rounded" %>
        <% if error_classes(@son.errors.full_messages_for("description")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("description")[0] %></span>
          </div>
        <% end %>
      </div>

      <div class="mb-5">
        <%= form.label :email %><br>
        <%= form.email_field :email, class: "w-full rounded" %>
        <% if error_classes(@son.errors.full_messages_for("email")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("email")[0] %></span>
          </div>
        <% end %>
      </div>
    </div>

    <div class="col-span-1">
      <div class="mb-5">
        <%= form.label :age %><br>
        <%= form.text_field :age, class: "w-full rounded " %>
        <% if error_classes(@son.errors.full_messages_for("name")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("name")[0] %></span>
          </div>
        <% end %>
      </div>

      <div class="mb-5">
        <%= form.label :gender %><br>
        <%= form.text_field :gender, class: "w-full rounded" %>
        <% if error_classes(@son.errors.full_messages_for("description")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("description")[0] %></span>
          </div>
        <% end %>
      </div>

      <div class="mb-5">
        <%= form.label :phone %><br>
        <%= form.telephone_field :phone, class: "w-full rounded" %>
        <% if error_classes(@son.errors.full_messages_for("email")) %>
          <div class="text-red-700 text-xs">
            <span><%= @son.errors.full_messages_for("email")[0] %></span>
          </div>
        <% end %>
      </div>
    </div>

    <%= form.submit "Save", class: "bg-[#4237CA] hover:bg-[#0004ff] cursor-pointer text-white font-bold py-2 w-40 text-center px-4 mt-10 rounded" %>
  </div>
<% end %>